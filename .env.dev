# Primary Pi-hole instance (authoritative source)
PRIMARY_PIHOLE_URL=http://pihole-primary.local
PRIMARY_PIHOLE_PASSWORD=changeme

# Comma-separated list of secondary Pi-hole URLs, passwords, and optional friendly names
SECONDARY_PIHOLE_URLS=http://pihole-secondary-1.local,http://pihole-secondary-2.local
SECONDARY_PIHOLE_PASSWORDS=changeme,changeme
SECONDARY_PIHOLE_NAMES=secondary-1,secondary-2

# Synchronization behaviour
SYNC_INTERVAL=00:05:00
# Optional cron expression (takes precedence over interval when set)
# SYNC_CRON=*/5 * * * *
SYNC_DRY_RUN=false
HTTP_TIMEOUT=00:00:30

# Worker process configuration
LOG_LEVEL=Information
HEALTH_PORT=8080
